<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/full_circle"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:layout_centerInParent="true"
    android:layout_margin="5dp"
    android:layout_height="140dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        app:tint="@color/colorDarkGrey"
        android:id="@+id/backgroundImage"
        android:scaleType="centerCrop"
        android:padding="5dp"
        android:alpha="0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISION"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="14dp"
        android:id="@+id/txtEssentialName"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorDarkGrey"
        android:textStyle="bold" />

    <View
        android:layout_width="130dp"
        android:layout_height="2dp"
        android:layout_below="@id/txtEssentialName"
        android:layout_marginTop="5dp"
        android:id="@+id/essentialLine"
        android:layout_centerHorizontal="true"
        android:background="@color/colorDarkGrey" />

    <TextView
        android:id="@+id/essentialDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/essentialLine"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/missionText"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp" />


</RelativeLayout>