<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/relativeLayoutImage"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="@drawable/csi_inaug">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/blue_transparent" />

        <TextView
            android:id="@+id/txtAchievementName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CSI Foundation Eve Day"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/dateRelatedInfo"
            android:textSize="17dp"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/muli" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/dateRelatedInfo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/txtMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAR"
                android:layout_centerInParent="true"
                android:fontFamily="@font/muli"
                android:layout_alignParentTop="true"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:fontFamily="@font/muli"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:layout_below="@id/txtMonth" />

            <TextView
                android:id="@+id/txtYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020"
                android:textStyle="bold"
                android:fontFamily="@font/muli"
                android:layout_centerInParent="true"
                android:layout_below="@id/txtDate"
                android:textSize="12dp"
                android:textColor="#ffffff" />

        </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>