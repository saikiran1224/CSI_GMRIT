<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.news.IndividualNewsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/eventImageLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/csi_2016">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/blue_transparent" />

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:tint="#fff"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_baseline_keyboard_backspace_24" />


            <TextView
                android:id="@+id/achievementName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/muli"
                android:justificationMode="inter_word"
                android:text="CSI Chapter bags 3rd Best Chapter Award for the Consecutive Third Time."
                android:textColor="#fff"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventDateTime"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/back_button"
                android:textColor="#ffffff"
                android:layout_margin="8dp"
                android:padding="5dp"
                android:gravity="end"
                android:textStyle="bold"
                android:fontFamily="@font/muli"
                android:layout_height="wrap_content"
                android:text="SEP 21, 2020" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:textSize="15dp"
            android:padding="15dp"
            android:justificationMode="inter_word"
            android:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum "
            tools:targetApi="o" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:fontFamily="@font/muli"
            android:gravity="center_horizontal"
            android:layout_margin="15dp"
            android:text="Copyright Tripura Constructions All Rights Reserved." />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>